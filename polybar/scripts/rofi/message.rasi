/* Confirm Dialog */

@import "colors.rasi"

* {
    background-color:       @bg;
    text-color:             @fg;
	font:	 	"Iosevka Nerd Font 12";
}

window {
    width:     	320px;
    padding:   	25px;
    border:	1px;
    border-radius:          1px;
    border-color:           @ac;
    location:               center;
    y-offset:               -2em;
}

entry {
    expand: 				true;
    text-color:				@ac;
}
